<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/chat_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="时间"
        android:textColor="@color/cl_text_gray"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chat_content_iv"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="3dp"
            android:maxHeight="130dp"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <TextView
            android:id="@+id/chat_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="3dp"
            android:background="@mipmap/ic_chat_bg"
            android:maxWidth="240dp"
            android:text="哈哈"
            android:textColor="@color/cl_000"
            android:textSize="14sp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/chat_user_iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/q5"
            app:riv_corner_radius="3dp" />
    </LinearLayout>

</LinearLayout>