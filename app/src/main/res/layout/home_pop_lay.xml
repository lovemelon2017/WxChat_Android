<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/dialog_cardView"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/cl_fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_read_state_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:text="标记已读"
                android:textColor="@color/cl_000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/dialog_edit_message_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:text="修改消息数量"
                android:textColor="@color/cl_000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/dialog_edit_time_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:text="修改消息时间"
                android:textColor="@color/cl_000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/dialog_delete_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:text="删除该聊天"
                android:textColor="@color/cl_000"
                android:textSize="15sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>